/**
 * 1. Allow the grid system to be used on lists.
 * 2. Remove any margins and paddings that might affect the grid system.
 * 3. Remove inline element's whitespace.
 * 4. Webkit: fixes text-rendering: optimizeLegibility
 */
.grid {
  display: table;
  table-layout: fixed;
  border-collapse: collapse;
  width: 100%;
  list-style:none; /* [1] */
  margin:0; /* [2] */
  padding:0; /* [2] */
  letter-spacing: -0.30em; /* [3] */
  // font-family: FreeSans, Arimo, "Droid Sans", Helvetica, Arial, sans-serif; /* [3] */
  text-rendering: optimizespeed; /* [4] */
}

/* Based on the Nicolas method.
.grid {
  display: block;
  width: auto;
  margin: 0 -10px;
}
*/

/* Opera 12.x hack */
.opera-only:-o-prefocus,
.grid {
    word-spacing:-0.43em; /* [3] */
}

.grid--center {
  text-align: center;
}
.grid--right {
  text-align: right;
}
.grid--justify {
  text-align: justify;
  text-justify: distribute-all-lines; 
}
.grid--full {
  margin-left: 0;
}
.grid--full .grid__cell {
  padding-left: 0;
  padding-right: 0;
}

.grid__cell {
  display:inline-block; 
  *display: inline;
  *zoom: 1;
  -webkit-box-sizing:border-box;
  -moz-box-sizing:border-box;
  box-sizing:border-box;
  width: 100%;
  vertical-align:top;
  letter-spacing:normal; /* [3] */
  word-spacing:normal; /* [3] */
  text-rendering: auto; /* [3] */
  // font-family: sans-serif; /* [3] */
}
.grid__cell--center {
  text-align: center;
}
.grid__cell--right {
  text-align: right;
}
.grid__cell--middle {
  vertical-align: middle;
}
.grid__cell--bottom {
  vertical-align: bottom;
}
/**
 * Define Kite unit size.
 */

$kiteContainer = 960px;
$kiteGutter = 30px;
$kiteColumn = 50px;
$kiteColumns = 12;

.grid__cell {
  padding-left: ($kiteGutter / 2);
  padding-right: ($kiteGutter / 2);
}

.grid__cell--full { width: 100% }
.grid__cell--half { width: 50% }

for column in (1..12)
  .grid__cell--{column}
    $thisGutter = $kiteGutter * column
    $thisColumn = $kiteColumn * column
    width: unit((($thisColumn + $thisGutter) / $kiteContainer) * 100, '%')

@media only screen and (max-width: 640px)
  .grid__cell
    margin-bottom 10px
  for column in (1..12)
    .grid__cell--{column}
      width: 100%
