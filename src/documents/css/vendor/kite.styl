/**
 * 1. Allow the grid system to be used on lists.
 * 2. Remove any margins and paddings that might affect the grid system.
 * 3. Remove inline element's whitespace.
 * 4. Webkit: fixes text-rendering: optimizeLegibility
 */
.kite-g {
  display: table;
  table-layout: fixed;
  border-collapse: collapse;
  width: 100%;
  list-style:none; /* [1] */
  margin:0; /* [2] */
  padding:0; /* [2] */
  letter-spacing: -0.30em; /* [3] */
  font-family: FreeSans, Arimo, "Droid Sans", Helvetica, Arial, sans-serif; /* [3] */
  text-rendering: optimizespeed; /* [4] */
  text-align: left;
}

/* Based on the Nicolas method.
.kite-g {
  display: block;
  width: auto;
  margin: 0 -10px;
}
*/

/* Opera 12.x hack */
.opera-only:-o-prefocus,
.kite-g {
    word-spacing:-0.43em; /* [3] */
}

.kite-g--center {
  text-align: center;
}
.kite-g--right {
  text-align: right;
}
.kite-g--justify {
  text-align: justify;
  text-justify: distribute-all-lines; 
}
.kite-g--full {
  margin-left: 0;
}
.kite-g--full .kite-g__c {
  padding-left: 0;
  padding-right: 0;
}

.kite-g__c {
  display:inline-block; 
  *display: inline;
  *zoom: 1;
  -webkit-box-sizing:border-box;
  -moz-box-sizing:border-box;
  box-sizing:border-box;
  width: 100%;
  vertical-align:top;
  letter-spacing:normal; /* [3] */
  word-spacing:normal; /* [3] */
  text-rendering: auto; /* [3] */
  font-family: sans-serif; /* [3] */
  text-align: left;
}
.kite-g__c--center {
  text-align: center;
}
.kite-g__c--right {
  text-align: right;
}
.kite-g__c--middle {
  vertical-align: middle;
}
.kite-g__c--bottom {
  vertical-align: bottom;
}
/**
 * Define Kite unit size.
 */

$kiteContainer = 960px;
$kiteGutter = 20px;
$kiteColumn = 60px;
$kiteColumns = 12;

.kite-g__c {
  padding-left: ($kiteGutter / 2);
  padding-right: ($kiteGutter / 2);
}

.kite-g__c--full { width: 100% }
.kite-g__c--half { width: 50% }

for column in (1..12)
  .kite-g__c--{column}
    $thisGutter = $kiteGutter * column
    $thisColumn = $kiteColumn * column
    width: unit((($thisColumn + $thisGutter) / $kiteContainer) * 100, '%')
