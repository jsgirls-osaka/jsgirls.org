// Color
$black = #000000
$lightBlack = lighten($black,30%)
$gray = #D8D8D8
$lightGray = lighten($gray,30%)
$yellow = #EFDA5B
$paleYellow = lighten($yellow,30%)
$pink = #FF61AD
// $blue = #61D9FF
$blue = #4986B9
$orange = #FF914D
$type = 'Hiragino Kaku Gothic ProN', Helvetica, sans-serif
$type-yeseva = 'Yeseva One', $type

// Base
html
  -webkit-text-size-adjust 100%
  background-color $black
  font-family $type
  color: $lightBlack
  @media only screen and (max-width: 640px)
    font-size 14px

h1,h2,h3,h4,h5,h6,p,ul,dl
  margin 0
  margin-bottom 10px
  padding 0
  line-height 1.5

b,
.bold
  font-weight bold
  color $black

strong,
.strong
  color: $orange
  font-weight bold

img
  vertical-align top
  @media only screen and (max-width: 640px)
    max-width 100%

hr,
.hr
  border-bottom 5px solid $yellow

a
  color: $blue

// Typography
.type
  font-family: $type-yeseva;

.alpha
  margin-bottom 20px
  padding-bottom 10px
  border-bottom 5px solid $yellow
  font-size 2.2rem
  font-family: $type-yeseva;
  color $black
  a
    text-decoration none
    color inherit
    &:hover
      color: $blue

.beta
  margin-bottom 10px
  font-size 1.6rem
  font-family: $type-yeseva;
  color $black
  a
    text-decoration none
    color inherit
    &:hover
      color: $blue
.beta--headline
  padding-bottom 10px
  border-bottom 1px solid $gray

.omega
  margin-bottom 10px
  font-size 1.2rem
  font-weight bold
  color $black

// Layout
.the-hero
  border-bottom 10px solid $paleYellow
  background-color $yellow

.the-header
  position relative
  border-bottom 5px solid $paleYellow
  padding-top 2rem
  background-color $yellow
  // background-image url('/img/logo-min.png')
  // background-position right bottom
  // background-repeat no-repeat
  a
    text-decoration none
    color inherit
    &:hover
      color: $blue
  @media only screen and (max-width: 640px)
    text-align center
    .site-name
      display block
      padding-top 10px
    .site-banner
      display none
    .site-nav
      margin-bottom 0

.the-main
  padding-top 20px
  padding-bottom 20px
  background-color #fff

.the-footer
  line-height 88px
  color #FFF
  a
    color inherit

.l-container
  margin-left auto
  margin-right auto
  max-width 980px

.l-line
  list-style none
  margin-left 0
  > li
    display: inline

// Component
.tagline
  font-size 4rem
  font-family $type-yeseva
  @media only screen and (max-width: 640px)
    font-size 2rem
    > span
      display block

.logo
  @media only screen and (max-width: 640px)
    max-width: 150px
    max-height: 150px

.intro
  // font-size: 1.2rem

.aside
  padding 10px
  background-color $lightGray

.site-name
  line-height 1
  font-size 3rem
  font-family $type-yeseva

.site-nav
  line-height 3rem
  font-size: 1.2rem
  font-weight bold
  > li
    margin-right 1em

.site-banner
  position absolute
  right 10px
  bottom 10px

.section
  margin-bottom 30px

.event-list
  > li
    margin-bottom 20px

.media
  overflow hidden // Clearfix
.media__image
  float left
  margin-right 10px
  > img
    display block
.media__image--rev
  float right
  margin-left 10px
  margin-right auto
.media__body
  overflow hidden

.table
  border-collapse collapse
  width 100%
  th,td
    padding 0.5em 1em
.table__head
  border-bottom: 1px solid $gray
.table__title
  border-right: 1px solid $gray
  font-weight bold
  text-align right
.table__cellell--center
  text-align center
.table__cellell--right
  text-align right

.timetable
  overflow hidden
.timetable__time
  clear left
  float left
  width: 25%
.timetable__content
  margin-left 28%

.button
  // TODO: Separated font-size setting
  display inline-block
  border-radius 3px
  border 1px solid $yellow
  padding 0.5em 1em
  background-color $yellow
  font-weight bold
  text-decoration none
  color $black
  &:hover
    background-color mix($yellow,#FFF,80%)
  &.is-disabled
    border 1px solid $gray !important
    background-color $gray !important
    color $black !important
.button--primary
  border-color $pink
  background-color $pink
  font-size 2rem
  color #FFF
  &:hover
    background-color mix($pink,#FFF,80%)
.button--secondary
  border-color $orange
  background-color $orange
  color #FFF
  &:hover
    background-color mix($orange,#FFF,80%)
.button--full
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box
  width 100%
  text-align center

.frame
  border 1px solid $gray
  background-color $gray

.map-canvas
  width 100%
  height 320px

.copyright
  padding 1rem 0

// Helper
.mbs {
  margin-bottom 10px
}
.mbm {
  margin-bottom 20px
}
.mbl {
  margin-bottom 30px
}