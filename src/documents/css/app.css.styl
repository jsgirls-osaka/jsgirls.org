// Foundation
@import "vendor/normalize.styl";
@import "vendor/kite.styl";

// Color
$js-black = #000000;
$js-gray = #D8D8D8;
$js-yellow = #EFDA5B;
$js-pink = #DB80BF;
$js-sky = #3FCDDB;
$js-type = 'Yeseva One', cursive;

// Base
html
  -webkit-text-size-adjust 100%
  background-color $js-gray
  color: $js-black

h1,h2,h3,h4,h5,h6,p,ul,dl
  margin 0
  margin-bottom 10px
  padding 0

img
  vertical-align top
  max-width 100%

hr,
.hr 
  border-bottom 5px solid $js-yellow

// Typography
.type
  font-family: $js-type;

.alpha
  margin-bottom 20px
  padding-bottom 10px
  border-bottom 5px solid $js-yellow
  font-size 2.2rem
  font-family: $js-type;
  a
    text-decoration none
    color inherit
    &:hover
      color: $js-pink

.beta
  margin-bottom 10px
  font-size 1.6rem
  font-family: $js-type;
  a
    text-decoration none
    color inherit
    &:hover
      color: $js-pink
.beta--headline
  padding-bottom 10px
  border-bottom 1px solid $js-gray

.omega
  margin-bottom 10px
  font-size 1.2rem
  font-weight bold

// Layout
.the-hero
  background-color $js-yellow
  
.the-header
  background-color $js-yellow
  // background-image url('/img/logo-min.png')
  // background-position right bottom
  // background-repeat no-repeat
  a
    text-decoration none
    color inherit
    &:hover
      color: $js-pink

.the-main
  padding-top 20px
  padding-bottom 20px
  background-color #fff

.the-footer
  line-height 88px

.l-container
  margin-left auto
  margin-right auto
  max-width 980px

.l-line
  list-style none
  margin-left 0
  > li
    display: inline

// Component
.tagline
  font-size 4rem
  font-family $js-type

.intro
  font-size: 1.2rem

.site-name
  line-height 1
  font-size 3rem
  font-family $js-type

.site-nav
  line-height 3rem
  font-size: 1.2rem
  font-weight bold
  > li
    margin-right 1em

.site-banner
  margin-bottom 8px

.section
  margin-bottom 30px

.event-list
  > li
    margin-bottom 20px

.media
  overflow hidden // Clearfix
.media__image
  float left
  margin-right 10px
  > img
    display block
.media__image--rev
  float right
  margin-left 10px
  margin-right auto
.media__body
  overflow hidden

.table
  border-collapse collapse
  width 100%
  th,td
    padding 0.5em 1em
.table__head
  border-bottom: 1px solid $js-gray
.table__title
  border-right: 1px solid $js-gray
  font-weight bold
  text-align right
.table__cell--center
  text-align center
.table__cell--right
  text-align right

.frame
  border 1px solid $js-gray
  background-color $js-gray

.map-canvas
  width 100%
  height 320px